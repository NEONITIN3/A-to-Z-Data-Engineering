def word_count():
    str1 = input("entre the sentance :->  ")
    #word wise split kar do
    lst = str1.split()
    frq = {}
    for i in lst:
        if i in frq:
            frq[i] += 1
        else:
            frq[i]=1
    for key,value in frq.items():
        print(key," - ",value)
word_count()
