def word_count():
    str1 = input("entre the sentance :->  ")
    #word wise split kar do
    lst = str1.split()
    frq = {}
    for i in lst:
        if i not in frq.keys():
            frq[i] = 0
        frq[i] += 1
    print(frq)
word_count()

