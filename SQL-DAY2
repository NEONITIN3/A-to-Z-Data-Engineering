Create database class2_db;

use class2_db;
-- WE ARE GOING TO LEARN DDL COMMAND
-- CREATE
CREATE TABLE RAAM (NAME VARCHAR(10), ID INT);

-- INSERT ONLY ONE VALUE AT A TIME
INSERT INTO RAAM VALUES('JANAK',01)
SELECT * FROM RAAM

-- INSERTING MULTIPLE VALUE AT A TIME
INSERT INTO RAAM VALUES('LAKHAN',02),
('LAKHANAWA',03),
('PARANAWA',04),
('JIWANAWA',05),
('DARSANWA',06),
('NIHARWA',703),
('JIWANAWA',103),
('PARANAWA',503);

-- ALTER (ADDING RENAME DELETE COLOMN DONE BY THIS )
-- WE ARE GOING TO ADD EXTRA COLOMN IN TABLE
ALTER TABLE RAAM ADD VILLAGE VARCHAR(50) DEFAULT 'PURESAWA'

-- DELETING PARTICULAT COLOMN WITH ALTER COMMAND
ALTER TABLE RAAM DROP VILLAGE;

-- CHANGING DATA TYPE OF EXISTING COLUMN
ALTER TABLE RAAM MODIFY COLUMN VILLAGE VARCHAR(150)

-- SCHEMA DETAILS
SHOW CREATE TABLE RAAM

